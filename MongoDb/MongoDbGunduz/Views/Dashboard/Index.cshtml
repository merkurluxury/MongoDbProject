<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product vs Category Chart</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <div style="width: 50%; margin: auto;">
        <canvas id="productCategoryChart"></canvas>
    </div>

    <script>
        // Statik veriler
        const data = {
            labels: ['Electronics', 'Books', 'Clothing', 'Groceries', 'Toys'],
            datasets: [{
                label: 'Products per Category',
                data: [15, 9, 14, 7, 10], // Her kategori için ürün sayıları
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        };

        // Grafik yapılandırması
        const config = {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false // Grafikteki etiketin görünürlüğünü ayarlar
                    }
                }
            }
        };

        // Grafiği oluşturma
        const productCategoryChart = new Chart(
            document.getElementById('productCategoryChart'),
            config
        );
    </script>

</body>
</html>
