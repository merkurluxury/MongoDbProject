@model MongoDbGunduz.Dtos.ProductDtos.GetByIdProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Ürün Güncelle</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="container">
                        <input type="hidden" asp-for="ProductId" />

                        <div class="form-group">
                            <label for="Name">Ürün Adı</label>
                            <input type="text" asp-for="Name" class="form-control" id="Name" />
                        </div>

                        <div class="form-group mt-3">
                            <label for="Stock">Ürün Stok</label>
                            <input type="text" asp-for="Stock" class="form-control" id="Stock" />
                        </div>

                        <div class="form-group mt-3">
                            <label for="Price">Ürün Fiyat</label>
                            <input type="text" asp-for="Price" class="form-control" id="Price" />
                        </div>

                        <div class="form-group mt-3">
                            <label for="CategoryId">Kategori Seçiniz</label>
                            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.CategoryList, "Seçiniz...", new { @class = "form-control", id = "CategoryId" })
                        </div>

                        <div class="form-group mt-3">
                            <label for="ImageUrl">Ürün Resmi</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" id="ImageUrl" />
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Ürünü Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



