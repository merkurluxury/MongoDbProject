@model MongoDbGunduz.Dtos.CustomerDtos.GetByIdCustomerDto
@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Müşteri Güncelle</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="container">
                        <input type="hidden" asp-for="CustomerId" />

                        <div class="form-group">
                            <label for="CustomerFullName">Müşteri Adı Soyadı</label>
                            <input type="text" asp-for="CustomerFullName" class="form-control" id="CustomerFullName" />
                        </div>

                        <div class="form-group mt-3">
                            <label for="CustomerAddress">Adres</label>
                            <input type="text" asp-for="CustomerAddress" class="form-control" id="CustomerAddress" />
                        </div>

                        <div class="form-group mt-3">
                            <label for="CustomerPhone">Telefon</label>
                            <input type="text" asp-for="CustomerPhone" class="form-control" id="CustomerPhone" />
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Müşteri Bilgilerini Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>