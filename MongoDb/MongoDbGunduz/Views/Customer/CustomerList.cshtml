@model List<MongoDbGunduz.Dtos.CustomerDtos.ResultCustomerDto>
@{
    ViewData["Title"] = "CustomerList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            width: 90%;
            margin: 20px auto;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .page-title h4 {
            margin: 0;
            color: #333;
        }

        .page-btn {
            display: flex;
            align-items: center;
        }

        .btn-added {
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            text-decoration: none;
        }

            .btn-added img {
                margin-right: 5px;
            }

        .btn-download {
            background-color: #28a745;
            color: #fff;
            border-radius: 5px;
            padding: 10px 20px;
            margin-right: 10px;
            text-decoration: none;
        }

            .btn-download img {
                margin-right: 5px;
            }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .table th,
            .table td {
                padding: 10px;
                text-align: center;
                border-bottom: 1px solid #ddd;
            }

            .table thead {
                background-color: #007bff;
                color: #fff;
            }

            .table tbody tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            .table a {
                color: #007bff;
                text-decoration: none;
            }

                .table a:hover {
                    color: #0056b3;
                }

        .actions img {
            width: 20px;
            height: 20px;
        }

        .actions a {
            margin: 0 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <div class="page-title">
                <h4>Customer List</h4>
                <h6>Manage your customers</h6>
            </div>
            <div class="page-btn">
                <a href="/Customer/CreateCustomer/" class="btn btn-added">
                    <img src="~/inventory/assets/img/icons/plus.svg" alt="Add" class="me-1">Add New Customer
                </a>
            </div>
        </div>

        <!-- Butonlar için yeni eklenen kod -->
        <div class="download-buttons">
            <a href="#" id="download-pdf" class="btn-download">
                <img src="~/inventory/assets/img/icons/pdf.svg" alt="PDF">Download PDF
            </a>
            <a href="#" id="download-excel" class="btn-download">
                <img src="~/inventory/assets/img/icons/excel.svg" alt="Excel">Download Excel
            </a>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Customer Name/Last Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Delete</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.CustomerFullName</td>
                        <td>@item.CustomerAddress</td>
                        <td>@item.CustomerPhone</td>
                        <td><a href="/Customer/RemoveCustomer/@item.CustomerId" class="btn btn-danger">Delete</a></td>
                        <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-info">Update</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- JavaScript kodları -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.5/xlsx.full.min.js"></script>
    <script>
        document.getElementById('download-pdf').addEventListener('click', function (e) {
            e.preventDefault();
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            doc.autoTable({
                html: '.table',
                theme: 'striped',
                headStyles: { fillColor: [0, 123, 255] },
                startY: 20,
            });

            doc.save('customer-list.pdf');
        });

        document.getElementById('download-excel').addEventListener('click', function (e) {
            e.preventDefault();
            const wb = XLSX.utils.book_new();
            const ws = XLSX.utils.table_to_sheet(document.querySelector('.table'));

            XLSX.utils.book_append_sheet(wb, ws, 'Customer List');
            XLSX.writeFile(wb, 'customer-list.xlsx');
        });
    </script>
</body>
</html>
